@model IEnumerable<Webbansach.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>BRAND MANAGEMENT</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Create")
</p>
<table class="table">
    <tr>
        <th>
           BRANDS
        </th>
        <th>
            ADDRESS
        </th>
        <th>
            CALL NUMBER
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diachi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaNXB }) |
            @Html.ActionLink("Chi tiêt", "Details", new { id=item.MaNXB }) |
